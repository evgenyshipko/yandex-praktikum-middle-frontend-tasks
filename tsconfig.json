{
  "compilerOptions": {
    "lib": ["es2015"],
    "outDir": "compiled/js",
    "target": "es2019",
    "declaration": false,
    "module": "ESNext",
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "allowUmdGlobalAccess": true,
    "typeRoots" : ["./node_modules/@types"]
  },
  "include": [
    "*.ts"
  ],
  "exclude": ["node_modules"]
}
